{
  "name": "basictodo",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/main.ts",
    "watch:server": "bun --hot --no-clear-screen src/main.ts",
    "watch:types": "bun run type-check --watch --preserveWatchOutput",
    "watch": "concurrently --names \"SERVER,TYPES\" -c \"green.bold,blue.bold\" \"bun:watch:server\" \"bun:watch:types\"",
    "type-check": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "NODE_ENV=test bun test",
    "test:coverage": "NODE_ENV=test bun test --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun ./db/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:seed": "bun ./db/seed.ts",
    "prepare": "bun .husky/install.mjs"
  },
  "devDependencies": {
    "@eslint/js": "9.2.0",
    "@types/bun": "1.1.0",
    "concurrently": "8.2.2",
    "drizzle-kit": "0.22.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "globals": "15.2.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.4",
    "pino-pretty": "11.0.0",
    "prettier": "3.2.5",
    "typed-htmx": "0.2.3",
    "typescript-eslint": "7.9.0",
    "ws": "8.17.0"
  },
  "peerDependencies": {
    "typescript": "5.4.5"
  },
  "dependencies": {
    "drizzle-orm": "0.31.0",
    "hono": "4.2.5",
    "nanoid": "5.0.7",
    "pino": "9.0.0"
  }
}
